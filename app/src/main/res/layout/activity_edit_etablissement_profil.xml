<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.blinky.peestash.app.EditEtablissementProfilActivity">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:fillViewport="false" android:id="@+id/scroll">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false" android:weightSum="300" android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nom d&apos;établissement"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editNom" android:layout_below="@+id/textView9" android:layout_alignParentLeft="true"
            android:width="340dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Adresse"
            android:id="@+id/textView" android:layout_below="@+id/editNom" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editAdresse" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
            android:width="340dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Code Postal"
            android:id="@+id/textView10" android:layout_below="@+id/editAdresse" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editCP" android:layout_below="@+id/textView10" android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ville"
            android:id="@+id/textView11" android:layout_below="@+id/editCP" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editVille" android:layout_below="@+id/textView11" android:layout_alignParentLeft="true"
            android:width="340dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pays"
            android:id="@+id/textView12" android:layout_below="@+id/editVille" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPays" android:layout_below="@+id/textView12" android:layout_alignParentLeft="true"
            android:width="340dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tel fixe"
            android:id="@+id/textView13" android:layout_below="@+id/editAdresse" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editFixe" android:layout_below="@+id/textView13" android:layout_alignParentLeft="true"
            android:width="340dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tel Mobile"
            android:id="@+id/textView14" android:layout_below="@+id/editFixe" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editMobile" android:layout_below="@+id/textView14" android:layout_alignParentLeft="true"
            android:width="340dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Facebook"
            android:id="@+id/textView15" android:layout_below="@+id/editMobile" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editFB" android:layout_below="@+id/textView15" android:layout_alignParentLeft="true"
            android:width="340dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Site Web"
            android:id="@+id/textView16" android:layout_below="@+id/editFB"
            android:layout_alignParentLeft="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editSiteweb" android:layout_below="@+id/scroll" android:layout_alignParentLeft="true"
                android:width="340dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Votre e-mail"
                android:id="@+id/textemail"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/affichageEmail"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Modifier votre e-mail"
                android:id="@+id/textView18"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editEmail" android:width="340dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Confirmer l&apos;e-mail"
                android:id="@+id/textView19"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editConfirmEmail" android:width="340dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mot de passe"
                android:id="@+id/textView20"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editMdp" android:width="340dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Confirmer le mot de passe"
                android:id="@+id/textView21"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editConfirmMdp" android:width="340dp"/>
        <ImageView
                android:id="@+id/img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
        </ImageView>
        <Button
                android:layout_width="229dp"
                android:layout_height="0dp"
                android:text="Gérer mon image"
                android:id="@+id/btnImage" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_weight="6.67" android:gravity="center"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier"
                android:id="@+id/btnSave" android:gravity="center"/>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
