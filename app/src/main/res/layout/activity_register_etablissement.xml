 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center_horizontal"
                  tools:context="com.blinky.peestash.app.RegisterEtablissementActivity">

        <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Créer un compte"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="25dp"
                android:text="Votre nom d'établissement" />

        <EditText
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/textView2"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Nom" >

            <requestFocus />
        </EditText>

        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText3"
                android:layout_below="@+id/editText1"
                android:text="Votre e-mail" />

        <EditText
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText1"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/textView3"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="email@live.fr" />

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText3"
                android:layout_below="@+id/editText3"
                android:text="Confirmez votre e-mail" />

        <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/textView4"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="confirmation d&apos;email" />

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText4"
                android:layout_below="@+id/editText4"
                android:text="Votre mot de passe" />

        <EditText
                android:id="@+id/editPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/textView5"
                android:ems="10"
                android:inputType="textPassword" />

        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText6"
                android:layout_below="@+id/editText5"
                android:text="Confirmez votre mot de passe" />

        <EditText
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText5"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/textView6"
                android:ems="10"
                android:inputType="textPassword" />

        <Button
                android:id="@+id/btregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText6"
                android:layout_centerHorizontal="true"
                android:text="Je crée mon compte" />


    </LinearLayout>
