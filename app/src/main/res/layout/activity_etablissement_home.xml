<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.blinky.peestash.app.EtablissementHomeActivity" android:orientation="vertical">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
<LinearLayout android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Informations de profil"
            android:id="@+id/textView8" android:layout_gravity="center_horizontal"/>
    <ImageView android:id="@+id/imageView" android:layout_width="174dp" android:layout_height="128dp"
               android:minWidth="120dp" android:minHeight="90dp" android:maxWidth="300dp" android:maxHeight="220dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nom"
                  android:id="@+id/textView45" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Nom" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adresse"
                  android:id="@+id/textView46" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Adresse" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp" android:height="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cp"
                  android:id="@+id/textView47" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/CP" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ville"
                  android:id="@+id/textView48" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Ville" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pays"
                  android:id="@+id/textView49" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Pays" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tel Fixe"
                  android:id="@+id/textView50" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Fixe" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tel Mobile"
                  android:id="@+id/textView51" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Mobile" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="E-mail"
                  android:id="@+id/textView52" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Email" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Site Web"
                  android:id="@+id/textView53" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Siteweb" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Facebook"
                  android:id="@+id/textView54" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="80dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/Facebook" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
                  android:width="250dp"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editer mon profil"
            android:id="@+id/editprofil" android:layout_below="@+id/Nom" android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp" android:width="250dp" android:layout_gravity="center_horizontal"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>
