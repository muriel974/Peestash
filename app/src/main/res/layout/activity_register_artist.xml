<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.blinky.peestash.app.RegisterArtistActivity">

    <EditText
            android:id="@+id/editPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btregister"
            android:layout_alignLeft="@+id/textView5"
            android:layout_marginBottom="86dp"
            android:ems="10"
            android:inputType="textPassword" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editPassword"
            android:layout_alignLeft="@+id/editText4"
            android:text="Votre mot de passe" />

    <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btregister"
            android:layout_alignLeft="@+id/editPassword"
            android:layout_marginBottom="19dp"
            android:ems="10"
            android:inputType="textPassword" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText6"
            android:layout_alignParentLeft="true"
            android:text="Confirmez votre mot de passe" />


    <EditText
            android:id="@+id/editEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btregister"
            android:layout_below="@+id/textView3"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="email@live.fr" />

    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="22dp"
            android:text="Créer mon compte artiste"
            android:textAppearance="?android:attr/textAppearanceLarge" android:layout_alignParentLeft="true"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editPseudo"
            android:text="@+id/votreEmail" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editEmail"
            android:layout_below="@+id/editEmail"
            android:text="Confirmez votre e-mail" />

    <EditText
            android:id="@+id/editPseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editEmail"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="38dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nom" />

    <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="confirmation d&apos;email" >

        <requestFocus />
    </EditText>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editPseudo"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="17dp"
            android:text="Votre nom de scène" />
    <Button
            android:id="@+id/btregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="Je crée mon compte" />

</RelativeLayout>
